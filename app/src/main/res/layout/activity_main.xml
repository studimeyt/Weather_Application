                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="3"
                        android:fontFamily="sans-serif"
                        android:text="Monday"
                        android:textColor="@color/black"
                        android:id="@+id/day_2"
                        android:textSize="23sp" />


                    <TextView
                        android:layout_width="10sp"
                        android:layout_height="wrap_content"
